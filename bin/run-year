#!/bin/bash

set -e

./bin/build-year

for day in ./"$YEAR"/* ; do
  if test -f $day/Main.hs; then
    echo
    echo "================="
    echo $day
    echo "================="

    stack run $YEAR $(basename $day) test
    echo
    stack run $YEAR $(basename $day) pt1
    echo
    stack run $YEAR $(basename $day) pt2
  fi
done
